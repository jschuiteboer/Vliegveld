{{>base/head}}
{{>base/header}}
<main class="container">
    <table id="flightsTable" class="table table-hover"></table>

    <button id="addButton" type="button" class="btn btn-primary">
        Add new flight
    </button>

    <div id="flightModal" class="modal" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Flight</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="id" />

                    <div class="form-group">
                        <label for="airplane">Airplane</label>
                        <input id="airplane" type="text" class="form-control" readonly>
                        <button id="btnSelectAirplane" type="button" class="btn btn-default">Select Airplane</button>
                    </div>

                    <div class="form-group">
                        <input id="origin" type="hidden">
                        <label for="originDisplay">Origin</label>
                        <input id="originDisplay" type="text" class="form-control" readonly>
                        <button id="btnSelectOrigin" type="button" class="btn btn-default">Select Origin</button>
                    </div>

                    <div class="form-group">
                        <input id="destination" type="hidden">
                        <label for="destinationDisplay">Destination</label>
                        <input id="destinationDisplay" type="text" class="form-control" readonly>
                        <button id="btnSelectDestination" type="button" class="btn btn-default">Select Destination</button>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="btnSave" type="button" class="btn btn-primary">Save changes</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    {{>modal/airplaneSelect}}
    {{>modal/airportSelect}}
</main>

<script src="/js/flights.js"></script>
{{>base/footer}}